{
    "name": "docker",
    "version": "1.0.0",
    "description": "",
    "main": "src/server.ts",
    "scripts": {
        "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
        "typeorm": "typeorm-ts-node-commonjs",
        "watch-compile": "swc src -w --out-dir dist",
        "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/server.js",
        "build": "swc src -d dist",
        "start:watch:base": "SWCRC=true nodemon -w src -e '.ts,.js' -x node -r @swc-node/register",
        "start": "npm run start:watch:base -- src/server.ts",
        "migration:create": "typeorm migration:create src/orm/migrations/${name}",
        "migration:run:dev": "PG_HOST=node-type-orm-db NODE_PATH=./src ts-node ./node_modules/typeorm/cli.js migration:run --config ./orm/data-source.ts"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@swc-node/register": "1.6.6",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.92",
        "@types/express": "^4.17.19",
        "@types/node": "^20.8.9",
        "chokidar": "^3.5.3",
        "concurrently": "^8.2.1",
        "nodemon": "^3.0.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "@types/cors": "^2.8.15",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "eslint": "^8.52.0",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "joi": "^17.11.0",
        "reflect-metadata": "^0.1.13",
        "ts-node": "^10.9.1",
        "typeorm": "^0.3.17"
    }
}
